{
  "name": "pcit/pcit",
  "description": "A CI/CD System Based Docker Written by PHP",
  "keywords": [
    "ci",
    "docker",
    "pcit"
  ],
  "homepage": "https://github.com/pcit-ce/pcit",
  "type": "project",
  "license": "MIT",
  "repositories": [{
      "type": "path",
      "url": "./src/Api"
    },
    {
      "type": "path",
      "url": "./src/Runner"
    },
    {
      "type": "path",
      "url": "./src/Cache"
    },
    {
      "type": "path",
      "url": "./src/Plugin"
    },
    {
      "type": "path",
      "url": "./src/framework"
    },
    {
      "type": "path",
      "url": "./src/Logs"
    },
    {
      "type": "path",
      "url": "./plugins/storage/s3"
    },
    {
      "type": "path",
      "url": "./plugins/docker"
    },
    {
      "type": "path",
      "url": "./plugins/package/npm"
    },
    {
      "type": "path",
      "url": "./plugins/pages"
    },
    {
      "type": "path",
      "url": "./src/git/Coding"
    },
    {
      "type": "path",
      "url": "./src/git/Gitee"
    },
    {
      "type": "path",
      "url": "./src/git/Gogs"
    },
    {
      "type": "path",
      "url": "./src/git/GitHub"
    },
    {
      "type": "path",
      "url": "./src/PCIT"
    },
    {
      "type": "path",
      "url": "./src/providers/AliyunDockerRegistry"
    },
    {
      "type": "path",
      "url": "./src/providers/WeChat"
    }
  ],
  "authors": [{
    "name": "khs1994",
    "email": "khs1994@khs1994.com",
    "homepage": "https://khs1994.com"
  }],
  "support": {
    "issues": "https://github.com/pcit-ce/pcit/issues"
  },
  "require": {
    "php": "^7.1.3",
    "ext-PDO": "*",
    "ext-curl": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-redis": "*",
    "doctrine/cache": "^1.6",
    "filp/whoops": "^2.3",
    "firebase/php-jwt": "^5.0",
    "khs1994/curl": "~18.06.0",
    "khs1994/docker": "~18.06.0",
    "khs1994/tencent-ai": "~18.06.0",
    "khs1994/wechat": "dev-master",
    "monolog/monolog": "^1.23",
    "nunomaduro/collision": "^3.0",
    "pcit/api": "*",
    "pcit/runner": "*",
    "pcit/cache": "*",
    "pcit/framework": "*",
    "pcit/git-coding": "*",
    "pcit/git-gitee": "*",
    "pcit/git-gogs": "*",
    "pcit/git-github": "*",
    "pcit/kernel": "*",
    "pcit/logs": "*",
    "pcit/plugin": "*",
    "pcit/plugin-docker": "^19.06",
    "pcit/plugin-npm": "*",
    "pcit/plugin-pages": "*",
    "pcit/plugin-s3": "*",
    "pcit/provider-aliyun-docker-registry": "*",
    "pcit/provider-wechat": "*",
    "phpmailer/phpmailer": "^6.0",
    "pimple/pimple": "~3.0",
    "vlucas/phpdotenv": "^3.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "suggest": {
    "ext-xdebug": "*",
    "ext-pcntl": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PCIT\\Tests\\": "tests/PCIT/",
      "PCIT\\Tests\\Plugins\\": "tests/Plugins/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "18.12-dev"
    }
  },
  "scripts": {
    "docker:build": "docker buildx build -t pcit/pcit:alpine --progress=plain .",
    "docker:push": "docker-compose push pcit",
    "test": "phpunit",
    "test:codecov": "phpunit --coverage-clover=coverage.xml",
    "minio:server": "minio server z:",
    "git:archive": "git archive -o latest.zip HEAD",
    "frpc": "frpc -c ~\\frpc.ini",
    "fmt": "php-cs-fixer fix"
  }
}

{
  "name": "pcit/pcit",
  "description": "A CI/CD System Based Docker Written by PHP",
  "keywords": [
    "ci",
    "docker",
    "pcit"
  ],
  "homepage": "https://github.com/pcit-ce/pcit",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "path",
      "url": "./src/Runner"
    },
    {
      "type": "path",
      "url": "./src/Framework"
    },
    {
      "type": "path",
      "url": "./src/Logs"
    },
    {
      "type": "path",
      "url": "./src/git/Coding"
    },
    {
      "type": "path",
      "url": "./src/git/Gitee"
    },
    {
      "type": "path",
      "url": "./src/git/Gogs"
    },
    {
      "type": "path",
      "url": "./src/git/GitHub"
    },
    {
      "type": "path",
      "url": "./src/Kernel"
    },
    {
      "type": "path",
      "url": "./src/providers/AliyunDockerRegistry"
    },
    {
      "type": "path",
      "url": "./src/providers/WeChat"
    }
  ],
  "authors": [{
    "name": "khs1994",
    "email": "khs1994@khs1994.com",
    "homepage": "https://khs1994.com"
  }],
  "support": {
    "issues": "https://github.com/pcit-ce/pcit/issues"
  },
  "require": {
    "php": "^7.2.0",
    "ext-PDO": "*",
    "ext-curl": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-redis": "*",
    "doctrine/cache": "^1.6",
    "filp/whoops": "^2.3",
    "firebase/php-jwt": "^5.0",
    "khs1994/curl": "~18.06.0",
    "khs1994/docker": "~18.06.0",
    "khs1994/tencent-ai": "~18.06.0",
    "khs1994/wechat": "dev-master",
    "monolog/monolog": "^1.23",
    "nunomaduro/collision": "^3.0",
    "pcit/framework": "^19.06",
    "pcit/git-coding": "*",
    "pcit/git-gitee": "*",
    "pcit/git-github": "*",
    "pcit/git-gogs": "*",
    "pcit/kernel": "*",
    "pcit/logs": "*",
    "pcit/provider-aliyun-docker-registry": "*",
    "pcit/provider-wechat": "*",
    "pcit/runner": "^19.06",
    "phpmailer/phpmailer": "^6.0",
    "pimple/pimple": "~3.0",
    "vlucas/phpdotenv": "^3.0.0"
  },
  "require-dev": {
    "macfja/phar-builder": "^0.2.8",
    "phpunit/phpunit": "^8.0",
    "symfony/var-dumper": "^4.2"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "suggest": {
    "ext-xdebug": "*",
    "ext-pcntl": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "18.12-dev"
    }
  },
  "scripts": {
    "docker:build": "docker buildx build -t pcit/pcit:alpine --progress=plain .",
    "docker:push": "docker-compose push pcit",
    "test": "phpunit",
    "test:codecov": "phpunit --coverage-clover=coverage.xml",
    "minio:server": "echo minio server $HOME/minio",
    "git:archive": "git archive -o latest.zip HEAD",
    "frpc": "echo frpc -c ~\\frpc.ini",
    "fmt": "php-cs-fixer fix",
    "compile:dump": [
      "cp -r -f src/Framework/ vendor/pcit/framework",
      "cp -r -f src/Kernel/ vendor/pcit/kernel",
      "cp -r -f src/Logs/ vendor/pcit/logs",
      "cp -r -f src/Runner/ vendor/pcit/runner",
      "cp -r -f src/git/Coding/ vendor/pcit/git-coding",
      "cp -r -f src/git/Gitee/ vendor/pcit/git-gitee",
      "cp -r -f src/git/GitHub/ vendor/pcit/git-github",
      "cp -r -f src/git/Gogs/ vendor/pcit/git-gogs",
      "cp -r -f src/providers/AliyunDockerRegistry/ vendor/pcit/provider-aliyun-docker-registry",
      "cp -r -f src/providers/WeChat/ vendor/pcit/provider-wechat"
    ],
    "compile:pcit": "phar-builder package --name=pcit.phar --output-dir=./ --entry-point=bin/src/pcit.php --bzip2 --include framework --include src --include bin --include openapi/openapi.json",
    "compile:pcitd": "phar-builder package --name=pcitd.phar --output-dir=./ --entry-point=bin/src/pcitd.php --bzip2 --include framework --include src --include bin --include openapi/openapi.json"
  },
  "bin": [
     "bin/src/pcit",
     "bin/src/pcitd"
  ]
}

{
  "yaml.schemas": {
    "config/config.schema.json": [
      ".pcit.yaml",
      ".pcit.yml",
      ".pcit/**.yaml",
      ".pcit/**.yml"
    ],
    "http://json.schemastore.org/drone": [
      ".drone.yml"
    ],
    "http://json.schemastore.org/travis": ".travis.yml"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "plugins/**/metadata.json"
      ],
      "url": "/config/plugin.schema.json"
    },
    {
      "fileMatch": [
        "composer.json"
      ],
      "url": "https://json.schemastore.org/composer"
    },
    {
      "fileMatch": [
        "renovate.json"
      ],
      "url": "https://docs.renovatebot.com/renovate-schema.json"
    }
  ],
  "json.schemaDownload.enable": true,
  "editor.renderWhitespace": "all",
  "php.validate.enable": false,
  "php.suggest.basic": false,
  "intelephense.diagnostics.enable": false,
  "psalm.phpExecutablePath": "C:\\php-pre\\php.exe",
  "intelephense.environment.phpVersion": "8.0.0beta3",
  "intelephense.stubs": [
    "PDO",
    "redis",
    "curl",
    "iconv",
    "json",
    "pdo_mysql",
    "Core",
    "date",
    "standard"
  ],
  "php-docblocker.author": {
    "name": "pcit",
    "email": "ci@khs1994.com"
  },
  "phpunit.files": "**/{test,tests,Test,Tests}/**/*Test.php"
}
